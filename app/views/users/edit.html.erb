<div class="container-xl">  
  <div class="d-flex flex-column justify-content-center align-items-center m-5 border py-5">
    <h2>Edycja Użytkownika:</h2>

    <div class='mt-3'>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :first_name, 'Imię' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, 'Nazwisko' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_digest, 'Hasło' %>
          <%= f.text_field :password_digest, class: 'form-control' %>
        </div>

        <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
        <%= link_to 'Powrót', users_path, class: 'btn btn-secondary ml-1' %>
      <% end %>
    </div>
  </div>
</div>
