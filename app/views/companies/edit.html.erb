<div class="container-xl">  
  <div class="d-flex flex-column justify-content-center align-items-center m-5 border py-5">
    <h2>Edytuj dane firmy:</h2>

    <div class='mt-3'>
      <%= form_for @user, url: user_company_path(@user) do |f| %>
        <%= fields_for :company, @user.company do |ff| %>
          <div class="form-group">
            <%= ff.label :company_name, 'Nazwa firmy' %>
            <%= ff.text_field :company_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :owner_name, 'Imię właściciela' %>
            <%= ff.text_field :owner_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :owner_last_name, 'Nazwisko właściciela' %>
            <%= ff.text_field :owner_last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :street, 'Ulica' %>
            <%= ff.text_field :street, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :postal_code, 'Kod pocztowy' %>
            <%= ff.text_field :postal_code, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :city, 'Miasto' %>
            <%= ff.text_field :city, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :province, 'Województwo' %>
            <%= ff.text_field :province, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :country, 'Kraj' %>
            <%= ff.text_field :country, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :tax_number, 'NIP' %>
            <%= ff.text_field :tax_number, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= ff.label :regon, 'REGON' %>
            <%= ff.text_field :regon, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= ff.label :phone_number, 'Numer telefonu' %>
            <%= ff.text_field :phone_number, class: 'form-control' %>
          </div>
          
          <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
          <%= link_to 'Powrót', user_path(@user), class: 'btn btn-secondary ml-1' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
