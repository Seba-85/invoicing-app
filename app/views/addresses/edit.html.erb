<div class="container-xl">  
  <div class="d-flex flex-column justify-content-center align-items-center m-5 border py-5">
    <h2>Nowy adres:</h2>

    <div class='mt-3'>
      <%= form_with(model: @address, url: user_address_path(@user)) do |f| %>
        <div class="form-group">
          <%= f.label :street, 'Ulica' %>
          <%= f.text_field :street, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :state, 'Numer domu/lokalu' %>
          <%= f.text_field :state, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, 'Kod pocztowy' %>
          <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :city, 'Miasto' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :country, 'Kraj' %>
          <%= f.text_field :country, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
        <%= link_to 'PowrÃ³t', user_path(@user), class: 'btn btn-secondary ml-1' %>
      <% end %>
    </div>    
  </div>
</div>
