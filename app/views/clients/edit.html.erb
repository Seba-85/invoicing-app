<div class="container-xl">  
  <div class="d-flex flex-column justify-content-center align-items-center m-5 border py-5">
    <h2>Edytuj dane klienta:</h2>

    <div class='mt-3'>
      <%= form_with(model: @client, url: user_client_path(@user)) do |f| %>
        <div class="form-group">
          <%= f.label :company_name, 'Nazwa firmy' %>
          <%= f.text_field :company_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :owner_name, 'Imię właściciela' %>
          <%= f.text_field :owner_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :owner_last_name, 'Nazwisko właściciela' %>
          <%= f.text_field :owner_last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :street, 'Ulica' %>
          <%= f.text_field :street, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, 'Kod pocztowy' %>
          <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :city, 'Miasto' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :province, 'Województwo' %>
          <%= f.text_field :province, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :country, 'Kraj' %>
          <%= f.text_field :country, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :tax_number, 'NIP' %>
          <%= f.text_field :tax_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :regon, 'REGON' %>
          <%= f.text_field :regon, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
        <%= link_to 'Powrót', user_clients_path(@user), class: 'btn btn-secondary ml-1' %>
      <% end %>
    </div>    
  </div>
</div>
