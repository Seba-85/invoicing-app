<h1>Edytuj adres:</h1>

<%= form_with(model: @address, url: user_address_path(@user)) do |f| %>
  <div>
    <%= f.label :street, 'Ulica' %><br>
    <%= f.text_field :street %>
  </div>

  <div>
    <%= f.label :city, 'Miasto' %><br>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, 'Numer domu' %><br>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :country, 'Kraj' %><br>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label :postal_code, 'Kod pocztowy' %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.submit 'Zapisz' %>
  </div>
<% end %>

<%= link_to 'Back', user_address_path(@user) %>